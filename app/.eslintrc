{
    "parser": "@babel/eslint-parser",
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jquery": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module",
      "requireConfigFile": false,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "semi": 2,
      "react/jsx-uses-react": "error",   
      "react/jsx-uses-vars": "error" 
    },
    "globals": {
      "resolution": "writable"
    }
  }